<table class="table">
  <thead>

    <tr>
      <% ActiveRecord::Base.connection.exec_query("select * from phases where id_board=#{@board.id}").each do |i| %>
        <th><!--Id--></th>
        <th colspan="3">Phase</th>
      <% end %>
    </tr>
