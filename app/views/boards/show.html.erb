        <td><%= link_to 'Edit', edit_phase_path(phase["id"]) %></td>
        <td>>></td>
      <% end %> 
    </tr>
    <tr>
      <% ActiveRecord::Base.connection.exec_query("select * from phases where id_board=#{@board.id}").each do |phase| %>
        <th></th>
        <th colspan="3">Task</th>
      <%end %>
