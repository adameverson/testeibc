<table class="table">
  <thead>
    <tr>
      <th colspan="2">Task</th>
      <!--<th>Id phase</th>-->
    </tr>
  </thead>

  <tbody>
    <% ActiveRecord::Base.connection.exec_query("select * from tasks order by id_phase, id").each do |task| %>
      <tr>
        <td><%= task["task"] %></td>
        <!--<td><%= task["id_phase"] %></td>-->
        <% @tasks.each do |task2| 
          if task2.id == task["id"] %>

            <!-- <td><%= link_to 'Show', task2 %></td> -->
            <!-- <td><%= link_to 'Edit', edit_task_path(task2) %></td> -->
            <td>
              <div class="btn btn-outline-info btn-sm">
                <%= link_to 'Destroy', task2, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" %>
              </div>
            </td>

          <% end
        end %>
      </tr>
    <% end %>
  </tbody>
</table>

