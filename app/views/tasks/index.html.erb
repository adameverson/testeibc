<% $board_url = nil 
$phase_url = nil 
$task_url = nil %>

<% @title="Tasks" %>

<p id="notice"><%= notice %></p>

<div class="btn btn-outline-info btn-sm">
  <%= link_to 'Boards', boards_path, :class => "btn" %>
</div>
<div class="btn btn-outline-info btn-sm">
  <%= link_to 'Phases', phases_path, :class => "btn" %>
</div>

<h1>Tasks</h1>

<div class="btn btn-outline-info btn-sm">
  <%= link_to 'New', new_task_path, :class => "btn" %>
</div>
<h1></h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Task</th>
      <th>Id phase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% ActiveRecord::Base.connection.exec_query("select * from tasks order by id_phase").each do |task| %>
      <tr>
        <td><%= task["task"] %></td>
        <td><%= task["id_phase"] %></td>
        <% @tasks.each do |task2| 
          if task2.id == task["id"]
        %>
            <td><%= link_to 'Show', task2 %></td>
            <td><%= link_to 'Edit', edit_task_path(task2) %></td>
            <td><%= link_to 'Destroy', task2, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          
          <% end
        end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
