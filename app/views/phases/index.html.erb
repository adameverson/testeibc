<% $board_url = nil %>

<% @title="Phases" %>

<p id="notice"><%= notice %></p>

<div class="btn btn-outline-info btn-sm">
  <%= link_to 'Boards', 'boards#index', :class => "btn" %>
</div>
<div class="btn btn-outline-info btn-sm">
  <%= link_to 'Tasks', tasks_path, :class => "btn" %>
</div>

<h1>Phases</h1>

<div class="btn btn-outline-info btn-sm">
  <%= link_to 'New', new_phase_path, :class => "btn" %>
</div>
<h1></h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Phase</th>
      <th>Id board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% ActiveRecord::Base.connection.exec_query("select * from phases order by id_board").each do |phase| %>
      <tr>
        <td><%= phase["name"] %></td>
        <td><%= phase["id_board"] %></td>
        <% @phases.each do |phase2| 
          if phase2.id == phase["id"]
        %>
            <td><%= link_to 'Show', phase2 %></td>
            <td><%= link_to 'Edit', edit_phase_path(phase2) %></td>
            <td><%= link_to 'Destroy', phase2, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
          <% end
        end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
