<p id="notice"><%= notice %></p>

<%= link_to 'Boards', 'boards#index' %>

<h1>Phases</h1>

<%= link_to 'New Phase', new_phase_path %>

<table>
  <thead>
    <tr>
      <th>Id phase</th>
      <th>Name</th>
      <th>Id board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% ActiveRecord::Base.connection.exec_query("select * from phases order by id_board").each do |phase| %>
      <tr>
        <td><%= phase["id"] %></td>
        <td><%= phase["name"] %></td>
        <td><%= phase["id_board"] %></td>
        <% @phases.each do |phase2| 
          if phase2.id == phase["id"]
        %>
            <td><%= link_to 'Show', phase2 %></td>
            <td><%= link_to 'Edit', edit_phase_path(phase2) %></td>
            <td><%= link_to 'Destroy', phase2, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
          <% end
        end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
